{
  "index_patterns": [
    "chunks-*"
  ],
  "settings": {
    "analysis": {
      "analyzer": {
        "english_folded": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "porter_stem"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "document_id": {
        "type": "keyword"
      },
      "tenant_id": {
        "type": "keyword"
      },
      "page": {
        "type": "integer"
      },
      "text": {
        "type": "text",
        "analyzer": "english_folded"
      },
      "meta": {
        "type": "object",
        "enabled": true
      }
    }
  }
}